{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=retro.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "YOUR_SUPER_SECRET_KEY",  
    "Issuer": "Retro.API",
    "Audience": "Retro.Client",
    "ExpiresInMinutes": 60
  },
  "comments": "⚠️ For dev, this is fine. For production, store secrets securely (e.g., Azure Key Vault, environment vars).",
  "AllowedHosts": "*"
}
